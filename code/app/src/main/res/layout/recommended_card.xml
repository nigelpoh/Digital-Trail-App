<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recommended_card"
    android:layout_width="170dp"
    android:layout_height="220dp"
    android:orientation="vertical"
    android:background="@drawable/rounded_rect"
    android:elevation="4dp"
    android:layout_marginRight="60dp">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/recommended_image"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/roundedTopCorners"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:id="@+id/recommended_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/Home.RecommendedHeader"/>
        <TextView
            android:id="@+id/recommended_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAppearance="@style/Home.RecommendedBody"/>
        <TextView
            android:id="@+id/recommended_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Home.RecommendedLocationAway"/>
    </LinearLayout>
</LinearLayout>